<div class="col-xs-4">
  <div class="row">
    <div class="col-xs-12">
      <% @toys.each do |t| %>
        <div class="col-xs-4 toy-box">
        <img scr="<%= t.picture_url %>">
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <% @toys.each do |t| %>
      <p><%= t.description %></p>
      <div class="row">
        <div class="col-xs-4">
          <%= link_to  "Send a Message", new_conversation_path, class:'btn btn-default' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
