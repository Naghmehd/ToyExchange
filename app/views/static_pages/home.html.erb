<div class="row">
  <div class="col-sm-8">
    <%= form_tag(toys_path, :method => "get", id: "search-form", html: {class: 'form-group'}) do %>
    <%= text_field_tag :query, params[:query], size: 150, placeholder: "Search a Toy", class: "form-control"%>
    <%= button_tag(type: "submit", class: "btn btn-default") do %>
      <i class="glyphicon glyphicon-search"></i>
    <% end %>
    <%= submit_tag 'Search', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
</br>
</br>
  <div
    class="fb-like"
    data-share="true"
    data-width="450"
    data-show-faces="true">
  </div>
</br>
