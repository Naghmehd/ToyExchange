<div class="row">
  <%= render partial: '/static_pages/filterbar' %>
</div>
<!-- toy listing starts  -->
  <section>
    <div class="row">
      <div class="col-xs-4">
        <div class="row">
          <div class="col-xs-12">
            <% @toys.each do |t| %>
              <div class="col-xs-4 toy-box">
              <img scr="<%= t.picture_url %>">
              </div>

          </div>
        </div>
        <div class="row">
          <div class="col-xs-4">

            <p><%= t.description %></p>
            <div class="row">
              <div class="col-xs-4">
                <%= link_to  "Send a Message", new_conversation_path, class:'btn btn-default' %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </section>
