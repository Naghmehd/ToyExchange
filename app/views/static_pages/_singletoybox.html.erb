<div class="container">
  <div class="row">
    <div class="col-xs-4 toy-box">
      <div class="thumbnail">
      </div>
    </div>
    <div class="col-xs-4">
      <%= @toy.description %>
    </div>
    <div class="col-xs-4">
      <% if current_user.toys.any? %>
        <% current_user.toys.each do |toy| %>
          <%= link_to  "Update", edit_toy_path, class:'btn btn-default' %>
        <% end %>
      <% else %>
        <%= link_to  "Message", new_conversation_path, class:'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
