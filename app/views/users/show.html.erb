
  <div class="row">
    <h1>Hi <%= @user.username %></h1>
  </div>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-6">
        <h3>Your Listed Toys</h3>
      </div>
      <div class="col-xs-6 pull-right">
        <%= link_to  "List Toy", new_toy_path, class:'btn btn-default' %>
      </div>
    </div>
  </div>

<hr>

<% @user.toys.each do |t| %>
  <div class="row">
      <div class="col-xs-4">
        <div class="toy-box">
        <img scr="<%= t.profile_image %>">
        </div>
        <p><%= t.description %></p>
          <%= link_to 'Destroy', toy_path(t.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12">
        <h3>Your Requested Toys</h3>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-6">
          <div class="col-xs-12">
            <div class="col-xs-6">
                <% @wanted_toys.each do |t| %>
                  <div class="toy-box">
                  <img scr="<%= t.profile_image %>">
                  </div>
                <% end %>
            </div>
            <div class="col-xs-6">
              <% @wanted_toys.each do |t| %>
              <p><%= t.description %></p>
              <div class="col-xs-6 pull-left">
                <%= link_to  "Send a Message", new_conversation_path, class:'btn btn-default' %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
