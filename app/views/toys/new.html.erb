<h1> List your toys by filling the form</h1>

<%= simple_form_for @toys do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :category, required: true %>
    <%= f.input :brand, autocomplete: "on", required: true %>
    <%= f.input :age_group, required: true %>
    <%= f.input :condition, require: true %>
    <%= f.input :description, type: :text, require: true %>
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>
